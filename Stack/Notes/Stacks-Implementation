// Stack implementation using ArrayList
// Author: Rupesh Katariya
// Date: jan 26

import java.util.ArrayList;
public class StackExample {
   static class Stack {
        ArrayList<Integer> list = new ArrayList<>();//Arraylist mai jo jo operation we can use we can it here too 
         public boolean isEmpty() {
            return list.size() == 0;
        }
  // push
        public void push(int val) {
            list.add(val);
        }
   // pop
        public int pop() {
            if (isEmpty()) {
                System.out.println("Stack is empty");
                return -1;
            }
            int top = list.get(list.size() - 1);
            list.remove(list.size() - 1);
            return top;
        }
        // peek
        public int peek() {
            if (isEmpty()) {
                System.out.println("Stack is empty");
                return -1;
            }
            return list.get(list.size() - 1);
        }
    }
public static void main(String[] args) {
        Stack s = new Stack();
        s.push(1);
        s.push(2);
        s.push(3);
        s.push(4);
        s.push(5);

        while (!s.isEmpty()) {
            System.out.println(s.peek());
            s.pop();
        }
    }
}

//Stack implementation using LinkedList

public class StackUsingLinkedList {
        static class Node {
        int data;
        Node next;

        Node(int data) {
            this.data = data;
            next = null;
        }
    }

    static class Stack {
        Node top = null;

        // check if stack is empty
        public boolean isEmpty() {
            return top == null;
        }

        // push operation
        public void push(int val) {
            Node newNode = new Node(val);
            newNode.next = top;  // link new node to current top
            top = newNode;       // update top
        }

        // pop operation
        public int pop() {
            if (isEmpty()) {
                System.out.println("Stack Underflow â€” Stack is empty");
                return -1;
            }
            int popped = top.data;
            top = top.next; // move top one node down
            return popped;
        }

        // peek operation
        public int peek() {
            if (isEmpty()) {
                System.out.println("Stack is empty");
                return -1;
            }
            return top.data;
        }
    }

    public static void main(String[] args) {
        Stack s = new Stack();
        s.push(10);
        s.push(20);
        s.push(30);
        s.push(40);
        s.push(50);

        System.out.println("Stack elements (top to bottom):");
        while (!s.isEmpty()) {
            System.out.println(s.peek());
            s.pop();
        }
    }
}
